<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LupaKataSandi">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:layout_centerInParent="true"
            android:id="@+id/progressBar_lupa"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <include layout="@layout/toolbar_back"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:src="@drawable/background_gradient"/>

                </LinearLayout>

                <ImageView
                    android:layout_marginTop="90dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:src="@mipmap/prozy"
                    android:elevation="4dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="165dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="360dp"
                    android:layout_height="520dp"
                    android:background="@color/secondaryLightColor"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_marginTop="120dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="325dp"
                            android:layout_height="wrap_content"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:hint="Email Anda"
                            android:layout_gravity="center_horizontal"

                            >

                            <com.google.android.material.textfield.TextInputEditText

                                android:id="@+id/email_reset_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textEmailAddress"
                                />

                        </com.google.android.material.textfield.TextInputLayout>

                        <Button
                            android:id="@+id/reset_email_btn"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="25dp"
                            android:layout_width="250dp"
                            android:layout_height="47dp"
                            android:text="Atur Ulang Kata Sandi"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:textColor="@color/primaryLightColor"
                            android:background="@drawable/btn_rounded_fill"/>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

        </ScrollView>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>